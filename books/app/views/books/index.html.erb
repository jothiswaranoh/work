<table class="table table-striped table-hover" data-behavior="dragdrop">
  <thead>
    <tr>
      <th class="draggable" >Title</th>
      <th class="draggable">Content</th>
      <th class="draggable">Price</th>
      <th class="draggable">Other Functions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td data-behavior="popup"><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.content %></td>
        <td><%= number_to_currency book.price %></td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id), class: "btn btn-primary" %>
        </td>
        <td>
          <%= link_to "Delete", book_path(book.id), method: "DELETE", class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New", new_book_path, class: "btn btn-success" %>
<select id="grantor" name="grantor" data-url="" data-behavior="load_data_select" multiple="multiple" data-placeholder="Enter Grantor Name"></select>

