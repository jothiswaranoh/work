<h1>Account Histories</h1>

<% if @account_histories.any? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @account_histories.each do |history| %>
        <tr>
          <td><%= history.date.strftime("%Y-%m-%d") %></td>
          <td><%= history.description %></td>
          <td><%= number_to_currency(history.amount) %></td>
          <td>
            <%= link_to "View", history %>
            <%= link_to "Edit", edit_account_history_path(history) %>
            <%= link_to "Delete", history, method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No account histories available.</p>
<% end %>

<%= link_to "New Account History", new_account_history_path %>
<%= link_to "Back to Accounts", accounts_path %>
