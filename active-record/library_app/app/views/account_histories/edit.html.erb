<h1>Edit Account History</h1>

<%= form_with(model: @account_history, local: true) do |form| %>
  <% if @account_history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account_history.errors.count, "error") %> prohibited this account history from being saved:</h2>
      <ul>
        <% @account_history.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <div class="actions">
    <%= form.submit "Update Account History" %>
  </div>
<% end %>

<%= link_to "Back to Account History", account_history_path(@account_history) %>
