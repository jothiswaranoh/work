
<h1>Books</h1>

<% if @books.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author.name %></td>
          <td>
            <%= link_to "View", author_book_path(book.author, book) %>
            <%= link_to "Edit", edit_author_book_path(book.author, book) %>
            <%= link_to "Delete", author_book_path(book.author, book), method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No books available.</p>
<% end %>
