<!-- app/views/pictures/index.html.erb -->

<h1>Pictures</h1>

<% if @pictures.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Imageable Type</th>
        <th>Imageable</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @pictures.each do |picture| %>
        <tr>
          <td><%= picture.title %></td>
          <td><%= picture.imageable_type %></td>
          <td><%= picture.imageable.name if picture.imageable %></td>
          <td>
            <%= link_to "View", picture_path(picture) %>
            <%= link_to "Edit", edit_picture_path(picture) %>
            <%= link_to "Delete", picture_path(picture), method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No pictures available.</p>
<% end %>

<%= link_to "New Picture", new_picture_path %>
